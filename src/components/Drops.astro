<article>
    <h1>Drops</h1>
    <div class="card_shelf">
      <a href="/drop1" class="card_drop">
        <h3>Drop 1</h3>
        <img 
        srcset="/img/drop1-480w.webp 480w, /img/drop1-800w.webp 800w "
        sizes="(max-width: 600px) 480px, 800px"
        src="/img/drop1-800w.webp" 
        alt="Billede af drop" />
      </a>
      <a href="/drop2" class="card_drop">
        <h3>Drop 2</h3>
        <img src="/img/drop2.webp" alt="Billede af drop">
      </a>
      <a href="/drop3" class="card_drop">
        <h3>Drop 3</h3>
        <img src="/img/drop3.webp" alt="Billede af drop">
      </a>
    </div>
  </article>

  <style>

    article {
      margin-bottom: 40px;
    }
     article h1 {
    margin-bottom: 10px;
    text-align: center;
  }

  .card_shelf {
    display: flex;
    gap: 40px;
    margin-left: 20px;

    overflow-y: hidden;
		overflow-x: scroll;
		scroll-snap-type: x mandatory;
  }

  .card_drop {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    justify-items: center;
    align-items: center;

    width: 100%;
		min-width: 200px;
		max-width: 400px;
		scroll-snap-align: start;
  }

  .card_drop h3 {
    grid-row: 1;
    grid-column: 1;
    z-index: 1;

    font-size: 2rem;
    color: var(--third-text-color);
  }

  .card_drop img {
    grid-row: 1;
    grid-column: 1;
    z-index: 0;
    min-width: 150px;
    /* width: 100%; */
    height: 100%;
    object-fit: cover;
  }

  @media (min-width: 600px) {
    .card_shelf {
      max-width: 1400px;
      margin: auto;
      justify-content: space-between;
    }
    .card_drop h3 {
      font-size: 3rem;
    }
  }
  </style>