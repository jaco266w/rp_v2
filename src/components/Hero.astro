    width: 100%;
    height: 100%;
    object-fit: cover;

    grid-row: 1;
    grid-column: 1;
  }

  #hero div p {
    grid-row: 1;
    grid-column: 1;

    font-size: 2rem;
    text-transform: uppercase;
    color: var(--third-text-color);
  }

  a:hover {
    text-decoration: none;
  }

  a:hover p {
    transform: scale(1.02);
    transition: 0.2s;
  }

  @media (min-width: 600px) {
    #hero {
        flex-direction: row;
    }

    #hero div p {
      font-size: 3.5rem;
    }
  }
